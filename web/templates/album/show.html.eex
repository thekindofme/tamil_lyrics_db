<h2>Show album</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @album.title %>
  </li>

  <li>
    <strong>Artist:</strong>
    <%= @album.artist %>
  </li>

  <li>
    <strong>Songs:</strong>
    <%= for {song} <- @album.songs do %>
        <%= link song.title, to: song_path(@conn, :show, song) %>
    <% end %>
  </li>

</ul>

<%= link "Edit", to: album_path(@conn, :edit, @album) %>
<%= link "Back", to: album_path(@conn, :index) %>